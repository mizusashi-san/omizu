{
  "name": "omizu",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "description": "毎日の水の飲み忘れを、自然に気をつけられるようになるアプリ",
  "scripts": {
    "dev": "pnpm --filter main dev",
    "build": "pnpm --filter main build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "pnpm run -r --if-present test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": "24.11.0"
  }
}
